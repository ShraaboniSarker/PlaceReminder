<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp20"

        android:layout_marginRight="@dimen/dp20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/btn_crypto_wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp9">

                <TextView
                    android:id="@+id/tv_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Name"
                    android:drawableEnd="@drawable/ic_access_alarm_pink_24dp"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp9">
                <TextView
                    android:id="@+id/tender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/sp14"
                    android:text="Place Location:"
                    android:alpha="0.5"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_place_location"
                    android:layout_toEndOf="@+id/tender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="jigatola"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/main_text"
                    android:layout_marginLeft="@dimen/dp3"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp9">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp14"
                    android:text="24 March, 2019"
                    android:alpha="0.5"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_toEndOf="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="12.30 am"
                    android:alpha="0.5"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/dp20"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:alpha="0.5"
                android:background="#EBEBEB"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>